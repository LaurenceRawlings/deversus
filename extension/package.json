{
    "name": "deversus",
    "displayName": "Deversus",
    "description": "Competitve coding game",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:deversus.helloWorld",
		"onView:deversus-sidebar"
	],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "deversus.helloWorld",
                "title": "Hello World"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "deversus-sidebar-view",
                    "title": "Deversus",
                    "icon": "media/flame.svg"
                }
            ]
        },
        "views": {
            "deversus-sidebar-view": [
                {
                    "type": "webview",
                    "id": "deversus-sidebar",
                    "name": "Deversus",
                    "icon": "media/flame.svg",
                    "contextualTitle": "Deversus"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.1",
        "@rollup/plugin-typescript": "^8.3.0",
        "@tsconfig/svelte": "^3.0.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "concurrently": "^6.5.1",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "rollup": "^2.62.0",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "svelte": "^3.44.3",
        "svelte-check": "^2.2.11",
        "svelte-preprocess": "^4.10.1",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}
